{
  "suggest.noselect": false,
  "suggest.autoTrigger": "always",
  "suggest.timeout": 1000,
  "suggest.preferCompleteThanJumpPlaceholder":true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "disableWorkspaceFolders": true,
      "args": ["serve", "-debug", "0.0.0.0:8484", "-rpc.trace"],
      "initializationOptions": {
        "diagnostics": true,
        "formatTool": "goimports",
        "lintTool": "golint"
      }
    },
    "elmLS": {
      "command": "elm-language-server",
      "args": ["--stdio"],
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "runtime": "node",
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test"
      }
    },
    "sorbet": {
      "command": "srb",
      "args": ["tc", "--lsp", "--enable-all-experimental-lsp-features"],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "swift": {
      "command": "sourcekit-lsp",
      "args": [],
      "filetypes": ["swift"],
      "initializationOptions": {},
      "settings": {}
    },
    "sql": {
      "command": "sql-language-server",
      "args" : ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  "python.linting.pylintArgs": [
    "--disable=E0401, C0111, C0303, C0103, W0621, C0301, C0330, W0703"
  ]
}
